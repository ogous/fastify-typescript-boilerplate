{
  "extends": "@tsconfig/node18-strictest-esm/tsconfig.json",
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "swc": true,
    "esm": true,
    "require": ["tsconfig-paths/register"],
    "compilerOptions": {}
  },
  "compilerOptions": {
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "@db/*": ["src/db/*"],
      "@routes/*": ["src/routes/*"],
      "helper/*": ["src/helper/*"]
    }
  },
  "include": ["src/**/*", "environment.d.ts"],
  "exclude": ["node_modules"]
}
